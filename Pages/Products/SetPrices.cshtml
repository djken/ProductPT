@page
@model ProduitsPT.Pages.Products.SetPricesModel
@{
}

<h2>Set Prices</h2>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Products.Count; i++)
            {
                <tr>
                    <td>@Model.Products[i].Name</td>
                    <td>@Model.Products[i].Description</td>
                    <td>
                        <input type="hidden" asp-for="Products[i].Id" />
                        <input type="number" step="0.01" asp-for="Products[i].Price" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Save All" class="btn btn-primary" />
</form>
